<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/rl_click_replace_background"
            android:layout_width="fill_parent"
            android:layout_height="185dp"
            android:background="@drawable/load" 
            >

            <RelativeLayout
                android:id="@+id/rl_newunread"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_shape"
                android:gravity="center_vertical"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/push_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="5dp"/>



                <TextView
                    android:id="@+id/tv_new_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/push_image"
                    android:text="@string/pushdetail"
                    android:textSize="13dp" />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pyqusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="未登录"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/iv_head_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>