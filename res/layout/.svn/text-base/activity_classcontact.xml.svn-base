<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.schoolcontact.view.ClassContactActivity" >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/classcontact_title"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center"
            android:text="班级"
            android:textColor="@color/white" />

        <!-- android:cacheColorHint="#00000000"简单的列表显示 -->

    </LinearLayout>

     <TextView
            android:id="@+id/backtext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/rc_bar_back"
            android:text="返回"
            android:textColor="@color/white" /> 
            
     
    <com.schoolcontact.widget.PinnedHeaderListView
        android:layout_below="@+id/ll_title"
        android:id="@+id/pl_classcontact"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</RelativeLayout>