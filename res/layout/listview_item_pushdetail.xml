<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlist_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_post_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_post_head"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_post_head"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玉珊瑚"
            android:textColor="#336699"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_commentcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp" />

        <ImageView
            android:id="@+id/iv_head_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/friendactivity_comment_likeicon_pressed"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0天前"
            android:textColor="#70000000"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_messagecontent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_post_head"
        android:layout_gravity="end"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:text="121212"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_content_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_post_head"
        android:layout_marginRight="5dp"
        android:background="@drawable/friendactivity_comment_likeicon_pressed"
        android:visibility="gone" />

</RelativeLayout>