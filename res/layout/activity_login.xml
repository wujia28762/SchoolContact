<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.schoolcontact.view.LoginActivity" >

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="忘记密码？"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/ll_userpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_logpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_password"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/et_password"
            android:layout_centerVertical="true"
            android:src="@drawable/log_pwd" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_logpwd"
            android:background="@null"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="密码"
            android:inputType="textPassword"
            android:textSize="15sp" >

           
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_userpwd"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_loguser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_username"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/et_username"
            android:layout_centerVertical="true"
            android:src="@drawable/log_user" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_loguser"
            android:background="@null"
            android:ems="10"
            android:hint="用户名"
            android:singleLine="true"
            android:textSize="15sp" />
         <requestFocus />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_userpwd"
        android:layout_alignRight="@+id/ll_userpwd"
        android:layout_below="@+id/ll_userpwd"
        android:layout_marginTop="30dp"
        android:background="@drawable/loginbutton_shape"
        android:text="登录"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>